{
  "name": "learn-postgresql",
  "version": "1.0.0",
  "description": "PostgreSQL Tutorial",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "create": "psql -U postgres -d codeface -a -f schema.sql",
    "test": "nyc tap ./test/*.test.js | tap-nyc",
    "quick": "tap ./test/*.test.js",
    "start": "node server/server.js",
    "faster": "./node_modules/faster/bin/faster.js",
    "postinstall": "npm run create"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dwyl/learn-postgresql.git"
  },
  "keywords": [
    "PostgreSQL",
    "Postgres",
    "Beginners",
    "Tutorial"
  ],
  "author": "dwyl & friends",
  "license": "GPL-2.0",
  "bugs": {
    "url": "https://github.com/dwyl/learn-postgresql/issues"
  },
  "homepage": "https://github.com/dwyl/learn-postgresql#readme",
  "dependencies": {
    "pg": "^7.8.1",
    "pg-escape": "^0.2.0"
  },
  "devDependencies": {
    "faster": "^3.5.1",
    "nyc": "^13.1.0",
    "supertest": "^4.0.2",
    "tap": "^12.6.1",
    "tap-nyc": "^1.0.3",
    "tap-spec": "^5.0.0",
    "terminate": "^2.1.2"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 50,
    "statements": 50,
    "functions": 50,
    "branches": 50,
    "include": [
      "server/*.js"
    ],
    "exclude": [
      "test/*.test.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "cache": false,
    "all": true,
    "report-dir": "./coverage"
  }
}
